{
  "compilerOptions": {
    "types": ["mocha", "chai", "bn.js"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "cli/src",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["cli/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
